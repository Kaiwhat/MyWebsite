---
import { Icon } from "astro-icon/components";
import { basics } from "@cv";
const social = basics.profiles;
---

<section class="py-10 mt-4 bg-white border-gray-200 dark:bg-gray-900">
    <div class="px-4 mx-auto sm:px-6 lg:px-8 max-w-7xl">
        <div
            class="text-center xl:flex xl:items-center xl:justify-between xl:text-left"
        >
            <div class="xl:flex xl:items-center xl:justify-start">
                <p class="mt-5 text-sm xl:ml-6 xl:mt-0">
                    Â© 2025 Kaiwha. All Rights Reserved.
                </p>
            </div>

            <div
                class="items-center mt-8 xl:mt-0 xl:flex xl:justify-end xl:space-x-8"
            >
                <ul
                    class="flex flex-wrap items-center justify-center gap-x-8 gap-y-3 xl:justify-end"
                >
                    <li>
                        <a
                            href="/"
                            class="text-sm transition-all duration-300 hover:text-offset focus:text-offset"
                        >
                            Home
                        </a>
                    </li>
                    <li>
                        <a
                            href="/about"
                            class="text-sm transition-all duration-300 hover:text-offset focus:text-offset"
                        >
                            About
                        </a>
                    </li>
                </ul>

                <div
                    class="w-full h-px mt-8 mb-5 xl:w-px xl:m-0 xl:h-6 bg-border"
                >
                </div>

                <ul
                    class="flex items-center justify-center space-x-8 xl:justify-end"
                >
                    {
                        social.map(
                            (social: {
                                url: string | URL | null | undefined;
                                icon: unknown;
                            }) => (
                                <li>
                                    <a
                                        href={social.url}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="block transition-all duration-300 hover:text-offset focus:text-offset"
                                    >
                                        <Icon name={social.icon} />
                                    </a>
                                </li>
                            ),
                        )
                    }
                </ul>
            </div>
        </div>
    </div>
</section>
